{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Advanced Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Output Options */
    "removeComments": true,
    "sourceMap": true,
    "types": ["./src/global.d.ts", "csrf-csrf"]
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts"]
}
